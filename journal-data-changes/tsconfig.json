{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext"
    ],
    "types" : [ "node" ],
    "sourceMap": true,
    "target": "es5",
    "outDir": "./build",
    "allowJs": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts",
    "src/**/__mocks__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
